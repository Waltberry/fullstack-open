{
"editor.formatOnSave": true,
"editor.defaultFormatter": "esbenp.prettier-vscode",


// Prefer 2-space indents and LF newlines
"editor.tabSize": 2,
"editor.insertSpaces": true,
"files.eol": "\n",


// ESLint integration (optional if you enable ESLint below)
"eslint.enable": true,
"eslint.validate": [
"javascript",
"javascriptreact",
"typescript",
"typescriptreact"
],
"editor.codeActionsOnSave": {
"source.fixAll.eslint": true,
"source.organizeImports": true
},


// Language-specific default formatter to Prettier
"[javascript]": {
"editor.defaultFormatter": "esbenp.prettier-vscode"
},
"[javascriptreact]": {
"editor.defaultFormatter": "esbenp.prettier-vscode"
},
"[typescript]": {
"editor.defaultFormatter": "esbenp.prettier-vscode"
},
"[typescriptreact]": {
"editor.defaultFormatter": "esbenp.prettier-vscode"
},
"[json]": {
"editor.defaultFormatter": "esbenp.prettier-vscode"
}
}